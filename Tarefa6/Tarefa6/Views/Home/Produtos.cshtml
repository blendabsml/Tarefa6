@model IEnumerable<Tarefa6.Models.Produtos>

@{
    ViewData["Title"] = "Produtos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="banner">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
        </ol>

        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/img/banner1.png" alt="Los Angeles" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Content/img/banner2.png" alt="Chicago" style="width:100%;">
            </div>
        </div>

        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>

<section>
    <div class="container my-5 pt-md-5">
        <h2>Lançamentos</h2>
        <div class="row justify-content-center mx-auto">
            @foreach (var produto in Model)
            {
                <div class="col-12 col-md-5 px-0 mx-auto text-center mb-4 mb-md-5">
                    <a href="#" class="rounded-circle">
                        <img src="~/Content/img/@produto.Imagem" alt="@produto.Nome" class="img-fluid" style="width: 400px; height: 400px">
                        <h3>@produto.Nome</h3>
                        <h4>R$ @produto.Valor</h4>
                        <div class="btn btn-primary btn-block rounded-0 text-white font-weight-bold text-4 add-to-cart">
                            Adicionar ao carrinho
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>

</section>

<section id="promocoes">
    <h2>Promoções</h2>
    <div class="container my-5 pt-md-5">
        <div class="row justify-content-center mx-auto">

            <div class="card" style="width: 26rem;">
                <img class="card-img-top" src="~/Content/img/blusapromo.jpg" alt="Blusa com 50% OFF">
                <div class="card-body">
                    <h5 class="card-title">Blusa com até 50% OFF</h5>
                    <p class="card-text">Blusas na categoria PLUS SIZE com até 50% OFF, confira já! </p>
                    <a href="#" class="btn btn-primary">Saiba mais</a>
                </div>
            </div>
            <div class="card" style="width: 26rem;">
                <img class="card-img-top" src="~/Content/img/bermudapromo.png" alt="Bermuda com 20% OFF">
                <div class="card-body">
                    <h5 class="card-title">Bermudas com 20% OFF</h5>
                    <p class="card-text">Bermudas da coleção VERÃO23 com 20% OFF! </p>
                    <a href="#" class="btn btn-primary">Saiba mais</a>
                </div>
            </div>
            <div class="card" style="width: 26rem;">
                <img class="card-img-top" src="~/Content/img/calcapromo.png" alt="Calça com 50% OFF na 2º unidade">
                <div class="card-body">
                    <h5 class="card-title">50% OFF na 2º unidade</h5>
                    <p class="card-text">Comprando 2 unidades, a segunda calça terá 50% OFF! </p>
                    <a href="#" class="btn btn-primary">Saiba mais</a>
                </div>
            </div>
            </div>
        </div>
</section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function () {
        let contador = 0;

        $('.add-to-cart').on('click', function (event) {
            event.preventDefault();

            contador++;

            $('#carrinho-contador').text(contador);
        });
    });
</script>

